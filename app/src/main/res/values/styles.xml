<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActivityTransitions">true</item>

    </style>

    <style name="MyPopupOtherStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/white</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#181818</item>
        <!-- Used for the background -->
        <item name="android:background">@color/white</item>
        <item name="dialogCornerRadius">10dp</item>
        <item name="android:dialogCornerRadius">10dp</item>
    </style>

    <style name="AppTheme.popupWindows">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>
